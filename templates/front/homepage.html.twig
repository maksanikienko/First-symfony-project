    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Следующий</span>
  </button>
</div>



 
{% endblock %}
{% block album %}

   
<figure class="text-center"><h3>Товары на скидках</h3></figure>
  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      {% for product in products %}
        <div class="col">
          <div class="card shadow-sm">
            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="text-dark">
            <img src={{ asset(imagesFolder~product.image) }} height="200px" width="200px" style="display:block; margin: 0 auto;">
              <li style="list-style: none;padding-left: 20px;">{{ product.name }}</li>
              </a>
         
            <div class="card-body">
              <p class="card-text">{{ product.category.name ?? null }}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">

                <a href="{{ path('app_product_show', {'id': product.id}) }}">
                  <button type="submit" class="btn btn-sm btn-outline-secondary">View</button>
                   </a>
                  
                    <form action="{{ path('app_cart') }}" method="post">
                    <input type="hidden" name="_token" value="{{ csrf_token('app_cart') }}">
                    <input type="hidden" name="id" value="{{ product.id }}">
                    <button type="submit">Add to cart</button>
                    </form>
 
                </div>
                <small class="text-muted">{{ product.price }} Lei</small>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
        
{% endblock %}


   
</div>

       </body>
{% endblock %}