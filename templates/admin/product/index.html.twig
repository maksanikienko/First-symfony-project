{% extends 'base.html.twig' %}

{% block title %}Товары{% endblock %}

{% block body %}
    <h1>Товары</h1>

    <div class="container">
        <div class="d-flex row ">
{% for product in products %}
<div class="col-sm-6 col-md-4 col-lg-3">
    <div class="card" style="width: 18rem;">
        <img src="{{ asset(imagesFolder~'/'~product.image) }}" alt="{{ product.name }}" >
        <div class="card-body">
            <h5 class="card-title">{{ product.name }}</h5>
            <p class="card-text">{{ product.description }}</p>
            <form action="{{ path('app_cart') }}" method="post"class="d-flex justify-content-between">
                    <input type="hidden" name="_token" value="{{ csrf_token('app_cart') }}">
                    <input type="hidden" name="id" value="{{ product.id }}">
                    <button type="submit"class="btn btn-primary">Add to cart</button>
                    <p class="text-muted text-end">{{ product.price }} Lei</p>
                    </form>
            
        </div>
    </div>

    <div id="favoriteContainer">

    </div>

            <script>
            // Function to fetch and display the favorite products
            
        async function fetchAndDisplayFavorites() {
        try {
            const response = await fetch('http://127.0.0.1:8000/favorite/list');
            if (response.ok) {
            const favorites = await response.json();
            displayFavorites(favorites);
            } else {
            console.error('Failed to fetch favorites:', response.status, response.statusText);
            }
        } catch (error) {
            console.error('Error fetching favorites:', error);
        }
        }

        // Function to display the favorite products in the UI
        
        function displayFavorites(favorites) {
        const favoritesContainer = document.getElementById('favoriteContainer');
        favoritesContainer.innerHTML = '';

        favorites.forEach((favorite) => {
            let product = favorite.product;
            let favoriteItem = document.createElement('div');
            favoriteItem.className = 'favorite-item';
            favoriteItem.innerHTML = `
            <h3>${product.name}</h3>
            <p>${product.description}</p>
            <p>Price: ${product.price}</p>
            `;
            favoritesContainer.appendChild(favoriteItem);
        });
        }

        // Call the function to fetch and display favorites
        fetchAndDisplayFavorites();
        </script>
        <button onclick="fetchAndDisplayFavorites()">Загрузить данные</button>

    <td>
    <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-outline-primary">Show</a>
    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-outline-primary">Edit</a>
    <a href="{{ path('favorite_add', {'productId': product.id}) }}" class="btn btn-outline-primary">Add to Favorite</a>
    </td>

</div>
{% endfor %}
    </div>
        </div>
        

    <a href="{{ path('app_product_new') }}" class="btn btn-outline-primary">Create new</a>
{% endblock %}
