                <li><a href="{{ path('app_product_index') }}">Product</a></li>
                <li><a href="{{ path('app_store_index') }}">Store</a></li>
                <li><a href="{{ path('app_order_index') }}">Order</a></li>
                <li><a href="{{ path('app_login') }}">Login</a></li>
                <li><a href="{{ path('app_delivery') }}">Delivery</a></li>
                <li><a href="{{ path('app_comment_index') }}">Comment</a></li>
            </ul>
        </div>
        <div class="column column-90">
            <div class="admin-page-container">
                {% block body %}

                {% endblock %}
            </div>
        </div>
    </div>
</body>
</html>