{% extends 'base.html.twig' %}

{% block title %}Supermarket{% endblock %}

{% block body %}
    <h1>Supermarket</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ supermarket.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ supermarket.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ supermarket.address }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ supermarket.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ supermarket.email }}</td>
            </tr>
            <tr>
                <th>OpenedAt</th>
                <td>{{ supermarket.openedAt ? supermarket.openedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ClosedAt</th>
                <td>{{ supermarket.closedAt ? supermarket.closedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ supermarket.description }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ supermarket.rating }}</td>
            </tr>
            <tr>
                <th>IsOpened</th>
                <td>{{ supermarket.isOpened ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_supermarket_index') }}">back to list</a>

    <a href="{{ path('app_supermarket_edit', {'id': supermarket.id}) }}">edit</a>

    {{ include('supermarket/_delete_form.html.twig') }}
{% endblock %}
