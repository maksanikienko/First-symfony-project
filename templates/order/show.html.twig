{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>User_id</th>
                <td>{{ order.userId }}</td>
            </tr>
            <tr>
                <th>Items</th>
                <td>{{ order.items }}</td>
            </tr>
            <tr>
                <th>Total_price</th>
                <td>{{ order.totalPrice }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ order.status }}</td>
            </tr>
            <tr>
                <th>Delivery_address</th>
                <td>{{ order.deliveryAddress }}</td>
            </tr>
            <tr>
                <th>Deliveryman</th>
                <td>{{ order.deliveryman }}</td>
            </tr>
            <tr>
                <th>Payment_method</th>
